{
  "name": "wonder-stuff",
  "version": "1.0.0",
  "description": "Packages for sharing features across JavaScript-based projects",
  "repository": "git@github.com:Khan/wonder-stuff.git",
  "author": "Jeff Yates <jeff@khanacademy.org>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "build-settings"
  ],
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-flow": "^7.14.5",
    "@khanacademy/eslint-config": "^0.1.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "@rollup/plugin-replace": "^3.0.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.2.4",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-disable": "^2.0.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-flowtype": "^6.1.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.5.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-monorepo": "^0.3.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.26.1",
    "fast-glob": "^3.2.7",
    "flow-bin": "^0.161.0",
    "jest": "^27.2.4",
    "jest-extended": "^0.11.5",
    "lerna": "^4.0.0",
    "prettier": "^2.4.1",
    "rollup": "^2.57.0",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-terser": "^7.0.2"
  },
  "scripts": {
    "build": "NODE_ENV=production rollup -c build-settings/rollup.config.js",
    "watch": "NODE_ENV=development rollup -c build-settings/rollup.config.js --watch",
    "clean": "rm -rf packages/wonder-stuff-*/dist && rm -rf packages/wonder-stuff-*/node_modules",
    "coverage": "yarn run jest --coverage",
    "flow:ci": "flow check --max-workers 0",
    "dry-run-publish": "yarn run publishchecks && lerna version --no-git-tag-version --no-push",
    "lint": "eslint packages",
    "publishchecks": "git diff --stat --exit-code HEAD && yarn build && node utils/pre-publish-check.js",
    "publish": "yarn run publishchecks && lerna publish",
    "test": "yarn jest"
  }
}